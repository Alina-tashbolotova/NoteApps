<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_light"
    tools:context=".onBoardd.FirstFragment">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_first"
        android:layout_width="@dimen/width"
        android:layout_height="@dimen/heigt"
        android:layout_marginStart="@dimen/start"
        android:elevation="@dimen/elevation"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/desn"
        app:lottie_repeatCount="1000" />

    <TextView
        android:id="@+id/txt_functional_first"
        android:layout_width="@dimen/txt_width"
        android:layout_height="@dimen/txt_height"
        android:layout_marginLeft="@dimen/txt_left"
        android:layout_marginTop="40dp"
        android:layout_below="@id/lottie_first"
        android:text="@string/string_function"
        android:textColor="@color/functional_color"
        android:textSize="@dimen/txt_size" />

</RelativeLayout>