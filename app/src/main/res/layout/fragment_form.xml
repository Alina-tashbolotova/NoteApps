<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black1"
    android:orientation="vertical"
    tools:context=".ui.form.FormFragment">


    <TextView
        android:id="@+id/txt_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="290dp"
        android:layout_marginTop="18dp"
        android:text="@string/ready"
        android:textColor="@color/orange"
        android:textSize="@dimen/sp_txt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <View
        android:id="@+id/view_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_heidth"
        android:background="@color/silver"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_title" />

    <ImageView
        android:id="@+id/image_back"
        android:layout_width="@dimen/back33"
        android:layout_height="@dimen/back25"
        android:layout_marginStart="@dimen/back19"
        android:layout_marginTop="@dimen/back_top18"
        android:background="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/txt_h70"
        android:gravity="start"
        android:hint="@string/hint_txt"
        android:paddingStart="@dimen/pad_start15"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/btb_start"
        android:layout_marginBottom="@dimen/btn_bottom"
        android:background="@drawable/restangle3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_2" />


    <Button
        android:id="@+id/btn_2"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/btn2_start"
        android:layout_marginBottom="@dimen/btb2_bottom"
        android:background="@drawable/restangle2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/btn_1" />

    <Button
        android:id="@+id/btn_1"
        android:layout_width="@dimen/btn_width"
        android:layout_height="@dimen/btn_height"
        android:layout_marginStart="@dimen/btn3_start"
        android:layout_marginBottom="@dimen/btn3_bottom"
        android:background="@drawable/restangle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />


    <RadioButton
        android:id="@+id/rb_1"
        android:layout_width="@dimen/rad_wid"
        android:layout_height="@dimen/radio_hei"
        android:layout_marginStart="@dimen/rad_start"
        android:layout_marginBottom="@dimen/rad_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />

    <RadioButton
        android:id="@+id/rb_2"
        android:layout_width="@dimen/rad_wid"
        android:layout_height="@dimen/radio_hei"
        android:layout_marginStart="@dimen/rad100"
        android:layout_marginBottom="@dimen/bottom13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rb_1" />

    <RadioButton
        android:id="@+id/rb_3"
        android:layout_width="@dimen/rad_wid"
        android:layout_height="@dimen/radio_hei"
        android:layout_marginStart="@dimen/rad85"
        android:layout_marginBottom="@dimen/bottom13"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/rb_2" />


</androidx.constraintlayout.widget.ConstraintLayout>