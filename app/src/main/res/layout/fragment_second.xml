<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/black_light"
    tools:context=".onBoardd.SecondFragment">

    <TextView
        android:id="@+id/txt_skip_second"
        android:layout_marginTop="@dimen/txt_martop"
        android:layout_marginStart="300dp"
        android:textSize="16sp"
        android:textColor="@color/orange"
        android:text="@string/skip"
        android:layout_width="93dp"
        android:layout_height="23dp"/>

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_second"
        android:layout_width="287dp"
        android:layout_height="264dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="128dp"
        app:lottie_repeatCount="1000"
        android:elevation="5dp"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/cutting"/>

    <TextView
        android:id="@+id/txt_functional_second"
        android:layout_width="259dp"
        android:layout_height="24dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="445dp"
        android:text="@string/qualitative"
        android:textColor="@color/functional_color"
        android:textSize="16sp" />

</RelativeLayout>