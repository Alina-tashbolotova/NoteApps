<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.home.HomeFragment">

    <EditText
        android:id="@+id/ed_search"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/style_inputs"
        android:drawableLeft="@drawable/shape3"
        android:drawablePadding="12dp"
        android:hint="@string/search"
        android:paddingStart="30dp"
        android:textColorHint="@color/dark_grey"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_hint"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/style"
        android:hint="@string/need_to_do"
        android:paddingStart="23dp"
        android:textColorHint="@color/silver"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/ed_notes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="216dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/style_notes"
        android:hint="@string/need_to_do"
        android:paddingStart="23dp"
        android:textColorHint="@color/light_milky"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="4dp"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ed_notes" />
</androidx.constraintlayout.widget.ConstraintLayout>